<%= simple_form_for @ingredient, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name %>
  <%= f.input :recipe_id %>
  <%= f.input :measurement %>
  <%= f.input :quantity %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                ingredients_path, :class => 'btn' %>
  </div>
<% end %>
