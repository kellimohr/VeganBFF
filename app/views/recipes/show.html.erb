<%- model_class = Recipe -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
  <dd><strong><%= @recipe.name %></strong></dd>
</div>

</dl>
<div class="well">
  <table class="table table-striped">
    <h3><caption><strong>Recipe Ingredients</strong></caption></h3>
    <thead>
      <tr>
        <th><%= model_class.human_attribute_name(:name) %></th>
        <th><%= model_class.human_attribute_name(:quantity) %></th>
        <th><%= model_class.human_attribute_name(:measurement) %></th>
        <th><%= model_class.human_attribute_name(:notes) %></th>
      </tr>
    </thead>
    <tbody>
      <% @recipe.ingredients.each do |ingredient| %>
        <tr>
          <td><%= link_to ingredient.name, recipe_ingredient_path(@recipe, ingredient) %></td>
          <td><%= ingredient.quantity %></td>
          <td><%= ingredient.measurement %></td>
          <td><%= ingredient.notes %></td>
      <% end %>
    </tbody>
  </table>
  <dd><i class="icon-plus"></i><%= link_to "Add Ingredient", new_recipe_ingredient_path(@recipe), :class => 'btn btn-mini' %></dd>
</div>
<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              recipes_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_recipe_path(@recipe), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              recipe_path(@recipe),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
